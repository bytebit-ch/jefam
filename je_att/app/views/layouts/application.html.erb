<!DOCTYPE html>
<html>
<head>
  <title>LOL Jersey</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
   <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
 </head>

<body>
   <header class="main-header">

    <div class="top-header">

      <div class="content-wrap group">

        <a href="#" class="logo-wrap">
          <h1 class="logo">LOL Jersey</h1>
        </a>

        <div class="search-wrap">
          <i class="fa fa-search search-icon"></i>
          <input type="search" class="search-input" placeholder="Search for a product...">
          <i class="fa fa-close search-reset"></i>
        </div>

        <a href="#" class="add-new-post">+</a> 

  </header>

  


 <%= link_to '+', new_attraction_path %>

        <% if user_signed_in? %>
          <%= link_to 'Logout', destroy_user_session_path, method: :delete %>
        <% else %>
          <%= link_to 'Log in', new_user_session_path, class: 'login' %>
        <% end %>

     

   



      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>

      <%= yield %>
    
 <footer class="footer">
  <div class="statics">
    <ul>
      <li>About</li>
      <li>Contact</li>
      <li>Terms and Conditions</li>
    </ul>
  </div>
  <p>
    copyright
  </p>


  </footer>
 

</body>
</html>

</body>
</html>
